package H2_oefeningen;

import java.util.Scanner;


public class H2_Oef9_A {

	public static void main(String[] args) {
		
		Scanner input = new Scanner(System.in);
		
		int gegeven, totaal = 0, hoeveel = 0;
		
		for(int i = 0; i < 5; i++) {
			
			System.out.printf("Geef een getal (0 om te stoppen");
			gegeven = input.nextInt();
			
			if (gegeven < 0) {
				hoeveel ++;
				totaal += gegeven;
			}
			
		}
		
		if (hoeveel == 0) 
			System.out.printf("Er werden geen negatieve getallen ingevoerd");
		else
			System.out.printf("Het gemiddelde van alle negatieve getallen is: %1d", gegeven/totaal);
		

	}

}
